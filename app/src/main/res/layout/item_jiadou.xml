<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_86"
    android:layout_marginRight="@dimen/dp_10"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginBottom="@dimen/dp_10"
    android:background="@drawable/linear_border4"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_below="@+id/line"
            android:id="@+id/avatar"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_45"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_12"
            android:background="@mipmap/touxiang"
            />

        <LinearLayout
            android:id="@+id/firstline"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_below="@+id/line"
            android:layout_toEndOf="@+id/avatar"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="孙大圣"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold"
                android:textColor="@color/textColor4"
                />


            <View
                android:layout_width="@dimen/dp_2"
                android:layout_height="@dimen/dp_14"
                android:background="@color/textColor4"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                />

            <TextView
                android:id="@+id/shenfen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="店长"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold"
                android:textColor="@color/textColor4"
                />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/secondline"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_below="@+id/firstline"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_toEndOf="@+id/avatar"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/jiadou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总家豆"
                android:textSize="@dimen/sp_12"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="@color/textColor6"
                />

            <TextView
                android:id="@+id/jiadou_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="-1"
                android:textSize="@dimen/sp_12"
                android:textStyle="bold"
                android:textColor="@color/orange"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_marginLeft="@dimen/dp_5"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="颗"
                android:textSize="@dimen/sp_12"
                android:textStyle="bold"
                android:textColor="@color/textColor6"
                />

        </LinearLayout>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/jiadou"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/dp_60"
            android:layout_marginTop="@dimen/dp_38"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="家豆"
            android:textSize="@dimen/sp_10"
            android:textStyle="bold"
            android:textColor="@color/gray_btn_bg"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/dp_33"
            android:layout_marginTop="@dimen/dp_43"
            android:visibility="visible"
            />

        <TextView
            android:id="@+id/jiadou_zhuangtai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-1"
            android:textSize="@dimen/sp_11"
            android:textStyle="bold"
            android:textColor="@color/orange"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_42"
            android:visibility="visible"
            />


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/line"
            android:layout_below="@+id/jiadou_zhuangtai"
            android:layout_marginTop="@dimen/dp_10"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/shijian"
            android:text="2019-05-12 9:14"
            android:layout_alignParentEnd="true"
            android:textSize="@dimen/sp_10"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_70"
            />


    </RelativeLayout>

</RelativeLayout>