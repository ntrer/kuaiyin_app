<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background2"
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/color_w"
        app:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="添加跟进"
            android:textColor="@color/textColor5"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold"
            />
    </android.support.v7.widget.Toolbar>



    <ScrollView
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

     <LinearLayout
         android:orientation="vertical"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">

         <RelativeLayout
             android:layout_margin="@dimen/dp_20"
             android:layout_width="match_parent"
             android:background="@drawable/linear_border4"
             android:focusableInTouchMode="true"
             android:focusable="true"
             android:layout_height="@dimen/dp_400">

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="跟进方式"
                 android:textColor="@color/textColor5"
                 android:textStyle="bold"
                 android:layout_margin="@dimen/dp_15"
                 />


             <ImageView
                 android:id="@+id/arrow"
                 android:layout_alignParentEnd="true"
                 android:layout_marginTop="@dimen/dp_15"
                 android:layout_marginRight="@dimen/dp_15"
                 android:layout_width="@dimen/dp_16"
                 android:layout_height="@dimen/dp_16"
                 android:src="@mipmap/jiantou"
                 android:layout_gravity="center"
                 />

             <TextView
                 android:id="@+id/genjinfangshi"
                 android:layout_alignParentEnd="true"
                 android:layout_width="@dimen/dp_100"
                 android:layout_height="wrap_content"
                 android:layout_toLeftOf="@+id/arrow"
                 android:gravity="end"
                 android:text=""
                 android:hint="选择"
                 android:textSize="@dimen/sp_12"
                 android:textColor="@color/textColor5"
                 android:textStyle="bold"
                 android:layout_marginTop="@dimen/dp_15"
                 android:layout_marginRight="@dimen/dp_35"
                 />


             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="下次跟进时间"
                 android:textColor="@color/textColor5"
                 android:textStyle="bold"
                 android:layout_marginLeft="@dimen/dp_15"
                 android:layout_marginTop="@dimen/dp_45"
                 />


             <ImageView
                 android:id="@+id/arrow2"
                 android:layout_alignParentEnd="true"
                 android:layout_marginTop="@dimen/dp_45"
                 android:layout_marginRight="@dimen/dp_15"
                 android:layout_width="@dimen/dp_16"
                 android:layout_height="@dimen/dp_16"
                 android:src="@mipmap/jiantou"
                 android:layout_gravity="center"
                 />

             <TextView
                 android:id="@+id/genjinshijian"
                 android:layout_alignParentEnd="true"
                 android:layout_width="@dimen/dp_100"
                 android:gravity="end"
                 android:layout_height="wrap_content"
                 android:layout_toLeftOf="@+id/arrow"
                 android:text=""
                 android:hint="选择"
                 android:textSize="@dimen/sp_12"
                 android:textColor="@color/textColor5"
                 android:textStyle="bold"
                 android:layout_marginTop="@dimen/dp_45"
                 android:layout_marginRight="@dimen/dp_35"
                 />





             <View
                 android:layout_below="@+id/genjinshijian"
                 android:layout_width="match_parent"
                 android:layout_height="@dimen/dp_1"
                 android:background="@color/background"
                 android:layout_marginTop="@dimen/dp_15"
                 android:layout_marginLeft="@dimen/dp_15"
                 android:layout_marginRight="@dimen/dp_15"
                 />


             <TextView
                 android:id="@+id/genjin"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="跟进结果"
                 android:textColor="@color/textColor5"
                 android:textStyle="bold"
                 android:layout_marginLeft="@dimen/dp_15"
                 android:layout_marginTop="@dimen/dp_90"
                 />


             <EditText
                 android:id="@+id/genjinjieguo"
                 android:layout_below="@+id/genjin"
                 android:layout_width="fill_parent"
                 android:layout_height="match_parent"
                 android:layout_margin="@dimen/dp_10"
                 android:padding="@dimen/dp_6"
                 android:inputType="textMultiLine"
                 android:maxLines="20"
                 android:hint="输入内容"
                 android:enabled="true"
                 android:gravity="left"
                 android:textSize="@dimen/sp_14"
                 android:scrollbars="vertical"
                 android:background="@drawable/bg_edit_edit"
                 >
             </EditText>


         </RelativeLayout>


         <Button
             android:id="@+id/submit"
             android:layout_marginTop="@dimen/dp_20"
             android:layout_marginStart="@dimen/dp_20"
             android:layout_marginEnd="@dimen/dp_20"
             android:background="@drawable/btn_border"
             android:layout_below="@+id/txt_pwd"
             android:layout_width="match_parent"
             android:layout_height="@dimen/dp_35"
             android:text="提交"
             android:textSize="@dimen/sp_15"
             android:textColor="@color/color_w"
             />

     </LinearLayout>

    </ScrollView>
</RelativeLayout>