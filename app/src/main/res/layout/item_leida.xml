<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/dp_10"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginBottom="@dimen/dp_10"
    android:background="@drawable/linear_border4"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_below="@+id/line"
            android:id="@+id/avatar"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_45"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_12"
            android:src="@mipmap/touxiang"
            />

        <LinearLayout
            android:id="@+id/firstline"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_below="@+id/line"
            android:layout_toEndOf="@+id/avatar"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/sp_13"
                android:textColor="@color/textColor4"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/secondline"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_below="@+id/firstline"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_toEndOf="@+id/avatar"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/shijian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/sp_11"
                android:textColor="@color/textColor5"
                />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/tingliushichang"
            android:orientation="horizontal"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_below="@+id/firstline"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/tingliushichang_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/sp_14"
                android:textColor="@color/text_color"
                />

        </LinearLayout>


        <!--<View-->
            <!--android:layout_below="@+id/avatar"-->
            <!--android:layout_marginTop="@dimen/dp_5"-->
            <!--android:layout_marginRight="@dimen/dp_15"-->
            <!--android:layout_marginLeft="@dimen/dp_15"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="@dimen/dp_1"-->
            <!--android:background="@color/divider_line_d4"-->
            <!--/>-->


    </RelativeLayout>

</RelativeLayout>