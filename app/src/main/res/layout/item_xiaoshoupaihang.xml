<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/dp_6"
    app:cardElevation="@dimen/dp_1"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10"
    android:layout_marginBottom="@dimen/dp_10"
    android:foreground="?attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_95"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@mipmap/touxiang"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_toEndOf="@+id/avatar"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="孙大圣"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/textColor4"
                />

            <View
                android:layout_width="@dimen/dp_2"
                android:layout_height="@dimen/dp_12"
                android:layout_gravity="center"
                android:background="@color/gray_normal"
                android:layout_marginLeft="@dimen/dp_3"
                android:layout_marginRight="@dimen/dp_3"
                />

            <TextView
                android:id="@+id/shenfen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="家居顾问"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/textColor4"
                />

        </LinearLayout>


        <RelativeLayout
            android:id="@+id/kehuzongshu_title"
            android:layout_marginTop="@dimen/dp_54"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/kehuzongshu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="客户总数"
                android:textSize="@dimen/sp_10"
                android:textColor="@color/textColor5"
                />

            <TextView
                android:id="@+id/kehuzongshu_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_45"
                android:text="210"
                android:paddingLeft="@dimen/dp_1"
                android:paddingRight="@dimen/dp_1"
                android:textColor="@color/orange"
                android:textStyle="bold"
                android:textSize="@dimen/sp_10"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/zuorixinzeng_title"
            android:layout_marginTop="@dimen/dp_54"
            android:layout_marginLeft="@dimen/dp_90"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/zuorixinzeng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="昨日新增客户数"
                android:textSize="@dimen/sp_10"
                android:textColor="@color/textColor5"
                />

            <TextView
                android:id="@+id/zuorixinzeng_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_75"
                android:text="21"
                android:paddingLeft="@dimen/dp_1"
                android:paddingRight="@dimen/dp_1"
                android:textColor="#009844"
                android:textStyle="bold"
                android:textSize="@dimen/sp_10"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/genjinkehu_title"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_73"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/genjinkehu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="跟进客户"
                android:textSize="@dimen/sp_10"
                android:textColor="@color/textColor5"
                />

            <TextView
                android:id="@+id/genjinkehu_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_45"
                android:text="2"
                android:paddingLeft="@dimen/dp_1"
                android:paddingRight="@dimen/dp_1"
                android:textColor="@color/orange"
                android:textStyle="bold"
                android:textSize="@dimen/sp_10"
                />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/zixunkehu_title"
            android:layout_marginTop="@dimen/dp_73"
            android:layout_marginLeft="@dimen/dp_90"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/zixunkehu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="咨询客户数"
                android:textSize="@dimen/sp_10"
                android:textColor="@color/textColor5"
                />

            <TextView
                android:id="@+id/zixunkehu_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_75"
                android:text="21"
                android:paddingLeft="@dimen/dp_1"
                android:paddingRight="@dimen/dp_1"
                android:textColor="#009844"
                android:textStyle="bold"
                android:textSize="@dimen/sp_10"
                />


        </RelativeLayout>



        <LinearLayout
            android:layout_alignParentEnd="true"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_30"
            android:background="@mipmap/zonghezhi"
            android:layout_width="@dimen/dp_49"
            android:layout_height="@dimen/dp_42">

            <TextView
                android:id="@+id/zonghezhi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="521"
                android:layout_marginTop="@dimen/dp_1"
                android:layout_gravity="center"
                android:textSize="@dimen/sp_22"
                android:textColor="@color/color_w"
                android:textStyle="bold"
                />


        </LinearLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>