<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/dp_6"
    app:cardElevation="@dimen/dp_0"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10"
    android:layout_marginBottom="@dimen/dp_10"
    android:foreground="?attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_100"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/zeroline"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_18">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最后访问时间:"
                android:textSize="@dimen/sp_10"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_3"
                android:layout_marginBottom="@dimen/dp_3"
                android:textColor="@color/textColor5"
                />

            <TextView
                android:id="@+id/fangwenshijian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginTop="@dimen/dp_3"
                android:layout_marginBottom="@dimen/dp_3"
                android:textSize="@dimen/sp_10"
                android:textColor="@color/textColor5"
                />

        </LinearLayout>



        <TextView
            android:id="@+id/zhuanweiyixiangkehu"
            android:layout_alignParentEnd="true"
            android:layout_width="@dimen/dp_90"
            android:text="转为意向客户"
            android:gravity="center"
            android:background="@drawable/text_border4"
            android:paddingTop="@dimen/dp_2"
            android:textSize="@dimen/sp_10"
            android:textColor="@color/color_w"
            android:layout_height="@dimen/dp_18"/>

        <View
            android:id="@+id/line"
            android:layout_below="@+id/zeroline"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/background2"
            />



        <ImageView
            android:layout_below="@+id/line"
            android:id="@+id/avatar"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_16"
            android:src="@mipmap/touxiang"
            />

        <LinearLayout
            android:id="@+id/firstline"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_below="@+id/line"
            android:layout_toEndOf="@+id/avatar"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="孙大圣"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/textColor4"
                />


            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18637280068"
                android:layout_marginLeft="@dimen/dp_5"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/textColor4"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/secondline"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_below="@+id/firstline"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_toEndOf="@+id/avatar"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/laiyuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/sp_10"
                android:textColor="@color/textColor5"
                />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/thirdline"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_below="@+id/secondline"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_3"
            android:layout_toEndOf="@+id/avatar"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/fangwencishu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="访问次数"
                android:textSize="@dimen/sp_10"
                android:textColor="@color/textColor5"
                />

            <TextView
                android:id="@+id/fangwencishu_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_3"
                android:layout_marginRight="@dimen/dp_3"
                android:text="21"
                android:paddingLeft="@dimen/dp_1"
                android:paddingRight="@dimen/dp_1"
                android:textColor="@color/orange"
                android:textStyle="bold"
                android:textSize="@dimen/sp_10"
                />

            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="@dimen/dp_9"
                android:background="@color/btn_gray_pressed_status"
                android:layout_marginRight="@dimen/dp_3"
                android:layout_gravity="center"
                />


            <TextView
                android:id="@+id/liulan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="浏览页面"
                android:textSize="@dimen/sp_10"
                android:textColor="@color/textColor5"
                />

            <TextView
                android:id="@+id/liulan_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_2"
                android:text="6"
                android:paddingLeft="@dimen/dp_1"
                android:paddingRight="@dimen/dp_1"
                android:textColor="#009844"
                android:textSize="@dimen/sp_10"
                android:textStyle="bold"
                />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/qianyue"
            android:layout_alignParentEnd="true"
            android:orientation="vertical"
            android:layout_below="@+id/line"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="@dimen/dp_45"
            android:background="@mipmap/yixiaingdu"
            android:layout_height="@dimen/dp_36">

            <TextView
                android:id="@+id/yixiangdu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="63"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_3"
                android:textStyle="bold"
                android:textColor="@color/color_w"
                android:textSize="@dimen/sp_17"
                />


        </LinearLayout>


        <TextView
            android:id="@+id/faxiaoxi"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_22"
            android:gravity="center"
            android:layout_below="@+id/qianyue"
            android:layout_marginTop="@dimen/dp_5"
            android:padding="@dimen/dp_2"
            android:background="@drawable/text_border3"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/dp_20"
            android:text="发消息"
            android:textStyle="bold"
            android:textColor="@color/text_color"
            android:textSize="@dimen/sp_10"
            />


    </RelativeLayout>

</android.support.v7.widget.CardView>