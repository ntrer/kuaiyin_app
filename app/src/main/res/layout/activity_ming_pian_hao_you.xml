<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background2"
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/color_w"
        app:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="添加好友"
            android:textColor="@color/textColor5"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold"
            />
    </android.support.v7.widget.Toolbar>


    <RelativeLayout
        android:id="@+id/search_title"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@color/color_w"
        android:layout_width="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_height="@dimen/dp_50">

        <ImageView
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_22"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:src="@mipmap/search"
            />


        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/txt_shanghu"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/dp_30"
            android:layout_marginEnd="@dimen/dp_60"
            android:layout_width="@dimen/dp_345"
            android:layout_below="@+id/shanghu"
            android:theme="@style/UpdateUserEditText"
            android:drawablePadding="@dimen/dp_6"
            android:layout_centerVertical="true"
            android:background="@null"
            android:hint="请输入手机号"
            android:textColor="@color/md_black_1000"
            android:textColorHint="@color/textColor2"
            android:textSize="@dimen/sp_12"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_height="match_parent"/>


        <TextView
            android:id="@+id/tianjiagenjin"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_25"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_below="@+id/qianyue"
            android:layout_marginTop="@dimen/dp_5"
            android:padding="@dimen/dp_2"
            android:background="@drawable/text_border5"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/dp_20"
            android:text="搜索"
            android:textStyle="bold"
            android:textColor="@color/textColor6"
            android:textSize="@dimen/sp_12"
            />


    </RelativeLayout>


    <LinearLayout
        android:id="@+id/wodemingpian"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/search_title"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的名片:"
            android:textSize="@dimen/sp_10"
            android:textColor="@color/textColor6"
            android:textStyle="bold"
            android:layout_marginRight="@dimen/dp_5"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="孙大圣"
            android:textSize="@dimen/sp_10"
            android:textColor="@color/textColor6"
            android:textStyle="bold"
            android:layout_marginRight="@dimen/dp_5"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/qrcode"

            />

    </LinearLayout>



    <RelativeLayout
        android:id="@+id/saomiao"
        android:layout_below="@+id/wodemingpian"
        android:layout_width="match_parent"
        android:background="@color/color_w"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_height="@dimen/dp_70">


        <ImageView
            android:id="@+id/saoyisao"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_45"
            android:src="@mipmap/scan"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="扫一扫"
            android:textColor="@color/textColor7"
            android:textSize="@dimen/sp_14"
            android:layout_toEndOf="@+id/saoyisao"
            android:layout_marginTop="@dimen/dp_18"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="扫描二维码名片"
            android:textColor="@color/textColor6"
            android:textSize="@dimen/sp_10"
            android:layout_toEndOf="@+id/saoyisao"
            android:layout_marginTop="@dimen/dp_38"
            />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/xindepengyou"
        android:layout_below="@+id/saomiao"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_3"
        android:background="@color/color_w"
        android:layout_height="@dimen/dp_40">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新的朋友"
            android:textSize="@dimen/sp_14"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:textColor="@color/textColor5"
            android:textStyle="bold"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/arrow"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fujinderen"
        android:layout_below="@+id/xindepengyou"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_3"
        android:background="@color/color_w"
        android:layout_height="@dimen/dp_40">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="附近的人"
            android:textSize="@dimen/sp_14"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:textColor="@color/textColor5"
            android:textStyle="bold"
            />

    </RelativeLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/srl_refresh"
        android:layout_below="@id/fujinderen"
        android:layout_marginTop="@dimen/dp_3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_recycleview"
            android:background="@color/color_w"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>
    </android.support.v4.widget.SwipeRefreshLayout>


    <LinearLayout
        android:id="@+id/ll_no_data"
        android:layout_below="@+id/fujinderen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:visibility="visible">

        <ImageView
            android:layout_width="@dimen/dp_130"
            android:layout_height="@dimen/dp_130"
            android:src="@mipmap/ic_no_data" />

    </LinearLayout>


</RelativeLayout>