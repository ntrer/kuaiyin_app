<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_68"
    android:layout_marginRight="@dimen/dp_10"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginBottom="@dimen/dp_10"
    android:background="@drawable/linear_border4"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_below="@+id/line"
            android:id="@+id/avatar"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_45"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_12"
            android:background="@mipmap/touxiang"
            />

        <LinearLayout
            android:id="@+id/firstline"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_below="@+id/line"
            android:layout_toEndOf="@+id/avatar"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="孙大圣"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold"
                android:textColor="@color/textColor4"
                />


            <View
                android:layout_width="@dimen/dp_2"
                android:layout_height="@dimen/dp_14"
                android:background="@color/textColor4"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                />

            <TextView
                android:id="@+id/shenfen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="店长"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold"
                android:textColor="@color/textColor4"
                />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/secondline"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_below="@+id/firstline"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_toEndOf="@+id/avatar"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18637280068"
                android:textSize="@dimen/sp_12"
                android:textStyle="bold"
                android:textColor="@color/gray_btn_bg"
                />

        </LinearLayout>


        <TextView
            android:id="@+id/shanghuname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="九龙卫浴"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"
            android:textColor="@color/text_color"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_12"
            />

        <TextView
            android:id="@+id/zhuangtai1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已添加"
            android:textSize="@dimen/sp_10"
            android:textStyle="bold"
            android:textColor="@color/gray_btn_bg"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_38"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/zhuangtai2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已拒绝"
            android:textSize="@dimen/sp_10"
            android:textStyle="bold"
            android:textColor="@color/gray_btn_bg"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_38"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/chakan"
            android:layout_width="@dimen/dp_42"
            android:layout_height="@dimen/dp_20"
            android:gravity="center"
            android:padding="@dimen/dp_2"
            android:background="@drawable/text_border3"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_38"
            android:text="查看"
            android:textStyle="bold"
            android:textColor="@color/text_color"
            android:textSize="@dimen/sp_10"
            android:visibility="gone"
            />


    </RelativeLayout>

</RelativeLayout>