<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_85"
    android:layout_marginRight="@dimen/dp_10"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginBottom="@dimen/dp_10"
    android:background="@drawable/linear_border4"
    >

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="优惠券名称"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/textColor6"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_20"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/textColor6"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_20"
        />

    <TextView
        android:id="@+id/money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20"
        android:textSize="@dimen/sp_30"
        android:textColor="@color/textColor5"
        android:layout_marginTop="@dimen/dp_35"
        android:layout_marginLeft="@dimen/dp_40"
        />

    <TextView
        android:id="@+id/manqian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="满200使用"
        android:textSize="@dimen/sp_10"
        android:textColor="@color/textColor6"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_120"
        />

    <TextView
        android:id="@+id/youxiaoqi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="有效期:2019/05/13-2019/10/01"
        android:textSize="@dimen/sp_10"
        android:textColor="@color/textColor6"
        android:layout_marginTop="@dimen/dp_45"
        android:layout_marginLeft="@dimen/dp_120"
        />

    <TextView
        android:id="@+id/shiyongriqi1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="未使用"
        android:textSize="@dimen/sp_10"
        android:textColor="@color/textColor6"
        android:layout_marginTop="@dimen/dp_60"
        android:layout_marginLeft="@dimen/dp_120"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/shiyongriqi2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="于2019/09/20使用"
        android:textSize="@dimen/sp_10"
        android:textColor="@color/textColor6"
        android:layout_marginTop="@dimen/dp_60"
        android:layout_marginLeft="@dimen/dp_120"
        android:visibility="visible"
        />

    <TextView
        android:id="@+id/yishiyong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已使用"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/color_w"
        android:padding="@dimen/dp_3"
        android:background="@drawable/btn_border2"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="@dimen/dp_20"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/yiguoqi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已过期"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/color_w"
        android:padding="@dimen/dp_3"
        android:background="@drawable/btn_border2"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="@dimen/dp_20"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/weishiyong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="去使用"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/color_w"
        android:padding="@dimen/dp_3"
        android:background="@drawable/btn_border"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="@dimen/dp_20"
        android:visibility="gone"
        />


</RelativeLayout>