<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/dp_20"
    android:layout_marginLeft="@dimen/dp_20"
    android:layout_marginBottom="@dimen/dp_10"
    android:background="@drawable/linear_border4"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_below="@+id/line"
            android:id="@+id/avatar"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_45"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_16"
            android:background="@mipmap/touxiang"
            />

        <LinearLayout
            android:id="@+id/firstline"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_19"
            android:layout_below="@+id/line"
            android:layout_toEndOf="@+id/avatar"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="孙大圣"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/textColor5"
                android:textStyle="bold"
                />

            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="@dimen/dp_8"
                android:background="@color/textColor4"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_gravity="center"
                />

            <TextView
                android:id="@+id/shenfen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="店长"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/textColor5"
                android:textStyle="bold"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/secondline"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_below="@+id/firstline"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_toEndOf="@+id/avatar"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/dianhua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18637280068"
                android:textSize="@dimen/sp_12"
                android:layout_marginLeft="@dimen/dp_5"
                android:textColor="@color/textColor5"
                />

            <TextView
                android:id="@+id/xingbie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="♂"
                android:layout_marginLeft="@dimen/dp_5"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/textColor5"
                />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/tianjiahaoyou"
            android:orientation="vertical"
            android:layout_alignParentEnd="true"
           android:layout_marginTop="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/dianpu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="九州卫浴"
                android:layout_gravity="center"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/text_color"
                android:layout_marginBottom="@dimen/dp_6"
                android:textStyle="bold"
                />


            <ImageView
                android:id="@+id/fenxiang"
                android:layout_width="@dimen/dp_65"
                android:layout_height="wrap_content"
                android:src="@mipmap/share"
                />

        </LinearLayout>


        <View
            android:layout_below="@+id/avatar"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/divider_line_d4"
            />


    </RelativeLayout>

</RelativeLayout>