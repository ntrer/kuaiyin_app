<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/dp_40"
    android:layout_marginRight="@dimen/dp_40"
    android:background="@drawable/dialog_normal_shap"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/title_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@id/ext_dialog_title"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp_40"
            android:gravity="center"
            android:text="文字"
            android:textColor="@color/color_maintext"
            android:textSize="@dimen/sp_16" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:background="#d6d6d6" />
    </LinearLayout>

    <RelativeLayout
       android:layout_marginTop="@dimen/dp_5"
        android:id="@+id/paixu"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="排序"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/textColor4"
            />

        <TextView
            android:id="@+id/paixu_text"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:hint="选择"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/textColor4"
            />

    </RelativeLayout>


    <RelativeLayout
        android:layout_below="@+id/paixu"
        android:id="@+id/shoujihao"
        android:layout_marginTop="@dimen/dp_3"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="手机号"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/textColor4"
            />

        <TextView
            android:id="@+id/shoujihao_text"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:hint="选择"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/textColor4"
            />

    </RelativeLayout>



    <RelativeLayout
        android:layout_below="@+id/shoujihao"
        android:id="@+id/laiyuan"
        android:layout_marginTop="@dimen/dp_3"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="来源"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/textColor4"
            />

        <TextView
            android:id="@+id/laiyuan_text"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:hint="选择"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/textColor4"
            />

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:background="#d6d6d6" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >


            <Button
                android:id="@+id/cancle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:background="@drawable/extdialog_right_button_style"
                android:textColor="#4a4a4a"
                android:text="@string/cancel"
                android:textSize="@dimen/sp_15" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="fill_parent"
                android:background="#d6d6d6" />

            <Button
                android:id="@+id/sure"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:background="@drawable/extdialog_right_button_style"
                android:textColor="#4a4a4a"
                android:text="@string/confirm"
                android:textSize="@dimen/sp_15" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>